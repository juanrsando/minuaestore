<%= form_with(model: product, local: true, multipart: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container-fluid" class="mx-auto" align="center">
  <div class="field">
    <%= form.label :name %>
    <br>
    <%= form.text_field :name, id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <br>
    <%= form.text_area :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <br>
    <% @categories.each do |c|%>
    <%=form.radio_button :category_id,c.id%><%=c.name%>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%= form.text_field :size, id: :product_size %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color, id: :product_color %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :product_price %>
  </div>
  <div class="field">
    <%= form.label :stock %>
    <%= form.text_field :stock, id: :product_stock %>
  </div>
<div class="field">
 <%= form.label :photo %>
 <%= form.file_field :photo %>
 <%= form.hidden_field :photo_cache %>
 <br>
 <%= image_tag(@product.photo) if @product.photo? %>
</div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
