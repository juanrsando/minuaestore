<style>
* {
  padding: 0;
  margin: 0;
}
.fit {
  max-width: 100%;
  max-height: 100%;
}
.center {
  display: block;
  margin: auto;
}
.wrapper {
    text-align: left;
}

.buttoncenter {
    position: absolute;
    top: 80%;
}
</style>
<script src="http://code.jquery.com/jquery-latest.js"></script>
<script type="text/javascript" language="JavaScript">
function set_body_height()
{
    var wh = $(window).height();
    $('body').attr('style', 'height:' + wh + 'px;');
}
$(document).ready(function() {
    set_body_height();
    $(window).bind('resize', function() { set_body_height(); });
});
</script>
<img src="<%= asset_path "14logominua2.png"%>"class="center fit">
<p>
  <div class="wrapper">
      <button type="button" class="btn btn-default btn-lg buttoncenter" align="center"><%= link_to "Ir a la Tienda", products_path%></button>
  </div>
</p>
